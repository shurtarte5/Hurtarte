<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:background="@android:color/holo_blue_light"
    android:layout_margin="5dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtfav_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtfav_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Sergio"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txtfav_card_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtfav_card_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Hurtarte"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txtfav_card_id"
            app:layout_constraintTop_toBottomOf="@+id/txtfav_card_name" />

        <TextView
            android:id="@+id/txtfav_card_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="144dp"
            android:text="hurtartesergio@gmail.com"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtfav_card_id"
            app:layout_constraintTop_toBottomOf="@+id/txtfav_card_lastname" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>